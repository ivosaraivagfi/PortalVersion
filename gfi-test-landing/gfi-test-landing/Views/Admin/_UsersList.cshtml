<script type="text/javascript">
    var idUser;
 

    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
        $('#AddProjectModal').addClass('show');

        $("#idDelete").click(function () {
            $('#addModal').modal('hide');
            var person = new Object();
            UserId = idUSer;
                /*$('#idUserDelete').text();*/

            //Ajax delete project
            $.ajax({
                type: 'DELETE',
                url: 'http://localhost:59443/api/DeleteUser/' + UserId,
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (data) {
                    $.notify({
                        title: '<strong>Success!</strong><br />',
                        message: 'User deleted successfully.'
                    }, {
                            type: 'success'
                        });
                },
                error: function (xhr, textStatus, errorThrown) {
                    $.notify({
                        title: '<strong>Error!</strong><br />',
                        message: 'Whoops! That didn\'t go so well did it ?.'
                    }, {
                            type: 'danger'
                        });
                }
            });
        })


        $.ajax({
            type: "get",
            url: "http://localhost:59443/api/GetProjects",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            data: {},
            success: function (result) {
                $.each(result, function (i) {

                    $('#ProjectsDropdown').append($('<option></option>').val(result[i].Id).html(result[i].Name));
                });
            },
            failure: function () {
                alert("Error");
            }
        });

        $.ajax({
            type: "get",
            url: "http://localhost:59443/api/GetRoles",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            data: {},
            success: function (result) {
                $.each(result, function (i) {

                    $('#RolesDropdown').append($('<option></option>').val(result[i].Id).html(result[i].Name));
                });
            },
            failure: function () {
                alert("Error");
            }
        });
        $('select option:contains("Select Role")').prop('disabled', true);
        $('select option:contains("Select Project")').prop('disabled', true);

        startListToUser();

    });

    //When click on the button to add new user
    $(document).on("click", ".edit", function () {

        idUser = $(this).parent().closest("tr").find('td:first').text();
        var username = $(this).parent().closest("tr").find('td:nth-child(2)').text();

        $("#labelProjectName").html(username);
        //$('#RolesDropdown > option').each(function () {
        //    if ($(this).text() == roleName) {
        //        $(this).attr('disabled', true);
        //    }

        //});
    });

    //Ajax set data for add new projet of the user
    $(document).on("click", "#AddProject", function () {
        $('#AddProjectModal').modal('hide');
        var data = {
            RoleId: $('#RolesDropdown').val(),
            id_project: $('#ProjectsDropdown').val(),
            UserId: idUser,
        }
        $.ajax({
            url: 'http://localhost:59443/api/setUserRole',
            type: 'POST',
            // dataType: 'json',
            data: data,
            success: function (result) {

                $.notify({
                    title: '<strong>Success!</strong><br />',
                    message: 'Association Added successfully.'
                }, {
                        type: 'success'
                    });

            },

            fail: function (result) {
                $.notify({
                    title: '<strong>Error!</strong><br />',
                    message: 'Whoops! That didn\'t go so well did it ?.'
                }, {
                        type: 'danger'
                    });
            }
        });

    })

    //When click to delete row
    $(document).on("click", ".tem-trigger-btn", function () {
        var eventName = $(this).data('name');
        var eventId = $(this).data('id');
        idUSer = $(this).parent().closest("tr").find('td:first').text();
        $('#Delete').html(eventName);
        $('#idUserDelete').html(eventId);
        // As pointed out in comments,
        // it is superfluous to have to manually call the modal.
        $('#addModal').addClass('show');
    });

    function startListToUser() {
        $.ajax({
            type: "GET",
            contentType: "application/json",
            dataType: "json",
            url: 'http://localhost:59443/api/GetUsers'
        })
            .done(function (Users) {
                console.log(Users);

                Users.forEach(function (user) {
                    setDataTableValues(user.Id, user.FirstName, user.LastName, user.Email);
                });

            }).always(function () {
                //Init DataTable
                $("#users-table").DataTable();
            });
    }

    function setDataTableValues(Id, FirstName, LastName, Email) {


        var details = '<a href="http://localhost:54669/Admin/UserDetails?UserId=' + Id +
            '" target="_blank"><i class="fa fa-share-square-o" style="font-size:24px; color:green" title="Details"></i></a>';
        var del = '<a data-toggle="modal" data-id="' + Id + '" data-name="' + Email + '" class="tem-trigger-btn" data-toggle="modal" href="#addModal"><i class="fa fa-trash-o" style="font-size:24px; color:red" title="Delete"></i></a>';
        var addproject= '<a href="#AddProjectModal" class="edit" data-toggle="modal"><i class="material-icons fa fa-plus-square-o" style="font-size:24px; color:green" data-toggle="tooltip" title="Add New Project"></i></a>';


        var row = '<tr>' +
            '<td hidden>' + Id + '</td>' +
            '<td>' + FirstName + " " + LastName + '</td>' +
            '<td>' + Email + '</td>' +
            '<td>' + details + "  " + del + " " + addproject +'</td>' +
            '</tr>';

        $('#users-table > tbody').append(row);
    }

</script>



