<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
<script>


    new Chart(document.getElementById("pie-chart"), {
        type: 'pie',
        data: {
            labels: ["Total Tests", "Passed", "Failed", "Skipped"],
            datasets: [{
                label: "Population (millions)",
                backgroundColor: ["#3e95cd", "#8e5ea2", "#3cba9f", "#e8c3b9"],
                data: [@Model.Total_tests, @Model.Pass_tests, @Model.Failed_tests, @Model.Skipped_tests]
            }]
        },
        options: {
            title: {
                display: true,
                text: 'Build Tests'
            }
        }
    });


    //Init DataTable
    $.ajax({
        type: "GET",
        contentType: "application/json",
        dataType: "json",
        url: 'http://localhost:59443/api/GetBuildTests/' + @Html.Raw(Model.Id),
        }).done(function (tests) {
        console.log(tests);
        tests.forEach(function (test) {

            setdatatablevalues(test.Id, test.Name, test.Date_start, test.Date_end,
                test.Status, test.Duration, test.General_message, 
                test.Error_message, test.Description, test.Browser, test.Site);
        });

        }).always(function () {
            //Init DataTable
            $("#tests-table").DataTable({
                scrollCollapse: true
            });

    });


    function setdatatablevalues(Id, Name, Date_start, Date_end, Status,
         Duration, General_message,
        Error_message, Description, Browser,Site) {

        var screenshots = '<a href="" target="blank"><i class="fa fa-image" style="font-size:24px;"></i></a>';
        var details = '<a href="http://localhost:54669/Reports/TestDetails?testId=' + Id +
            '" target="blank"><i class="fa fa-share-square-o" style="font-size:24px; color:green"></i></a>';

        var row = '<tr>' +
        '<td>' + Id + '</td>' +
        '<td>' + Name + '</td>' +
        '<td>' + Date_start + '</td>' +
        '<td>' + Date_end + '</td>' +
        '<td>' + Status + '</td>' + 
        '<td>' + Duration + '</td>' +
        '<td>' + Browser + '</td>' +
        '<td>' + details + '</td>' +
            '</tr>';

        $('#tests-table').append(row);
    }


</script>

